{
  "name": "merge-trees-contracts",
  "version": "0.0.1",
  "author": "Anthony Graignic",
  "private": true,
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonygraignic/the-merge-trees.git",
    "directory": "packages/contracts"
  },
  "engines": {
    "node": ">=10.6.0"
  },
  "scripts": {
    "clean": "hardhat clean && rm -f build contracts/build",
    "prepare": "pnpm run clean && hardhat typechain",
    "compile": "hardhat compile",
    "test": "env TS_NODE_TRANSPILE_ONLY=1 HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "size": "hardhat size-contracts",
    "gas": "env REPORT_GAS=true hardhat test",
    "coverage": "env COVERAGE=true hardhat coverage",
    "dev": "env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0",
    "dev:deploy": "hardhat ignition deploy ./ignition/modules/TheMergeTreeModule.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ./ignition/modules/TheMergeTreeModule.ts --network sepolia --verify",
    "deploy:mainnet": "hardhat ignition deploy ./ignition/modules/TheMergeTreeModule.ts --network mainnet --verify",
    "hardhat": "hardhat",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "check:svg": "svgo --config svgo.config.js -f images/qa -o images/qa/svgo_optimized",
    "generate:gif": "ffmpeg -framerate 1 -i images/gif/R_block%*.svg -vf \"palettegen\" -y images/gif/palette.png && ffmpeg -framerate 1 -i images/gif/R_block%*.svg -i images/gif/palette.png -lavfi \"paletteuse\" -loop 0 images/themerge-trees-example.gif",
    "generate:gif512": "ffmpeg -framerate 1 -i images/gif/R_block%*.svg -vf \"scale=512:-1:flags=lanczos,palettegen\" -y images/gif/palette.png && ffmpeg -framerate 1 -i images/gif/R_block%*.svg -i images/gif/palette.png -lavfi \"scale=512:-1:flags=lanczos[x];[x][1:v]paletteuse\" -loop 0 images/themerge-trees-example512.gif"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.9",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.9",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@openzeppelin/contracts": "^5.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.19.70",
    "@types/prompt": "^1.1.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.5.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.17",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-chai-matchers": "^0.0.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.8.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.4.1",
    "prompt": "^1.3.0",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.14",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5"
  }
}